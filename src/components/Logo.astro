---
import logo from '@components/Logo.svg?raw';
---

<style>
  span {
    aspect-ratio: 1;
		width: max(200px, calc(var(--unit) * 6));
		display: inline-flex;
		font-size: clamp(2rem, 2vmin + 2rem, var(--unit) * 2);
		color: var(--accent-color);
		filter: drop-shadow(.04em .04em var(--accent-shadow));
  }
</style>

<span set:html={logo} />