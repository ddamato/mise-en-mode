---
const { cite, float } = Astro.props;
---
<style>
  blockquote {
    margin-block: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: clamp(2rem, 2vmin + 2rem, var(--unit) * 2);
    font-weight: 600;
    font-family: 'Aboreto', cursive;
    line-height: calc(var(--unit) * 2);
    text-align: center;
    padding-block: calc(var(--unit) * 2);
    background: var(--bg-color);
    text-shadow: .04em .04em var(--accent-color);
  }

  blockquote[data-float] {
    padding: calc(var(--unit) * 2);
    float: left;
    text-align: right;
    max-width: calc(var(--unit) * 14);
    margin-inline-start: calc(var(--unit) * -8);
  }

  cite {
    font-size: 1.2rem;
    line-height: calc(var(--unit) * 2);
    font-weight: 500;
    width: 100%;
    text-shadow: none;
    font-family: 'Red Hat Display', sans-serif;
  }

  cite:before {
    content: 'â€” ';
  }

  @media  (display-mode: browser) and (max-width: 144vh) {
		blockquote[data-float] {
      float: initial;
      margin: 0;
      max-width: none;
      text-align: center;
      padding-inline: 0;
    }
	}

  @media not (display-mode: browser) {
    blockquote[data-float] {
      float: initial;
      text-align: center;
      margin: 0;
      max-width: none;
    }
  }
</style>

<blockquote data-float={ Boolean(float) }>
  <slot/>
  { cite && <cite>{ cite }</cite> }
</blockquote>