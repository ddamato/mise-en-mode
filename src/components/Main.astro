---
import Section from '@components/Section.astro';
import Logo from '@components/Logo.astro';
---

<style>

  main {
		margin-inline: auto;
		padding-block-start: calc(var(--unit) * 2);
	}

	div {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.lockup {
		min-height: calc(var(--unit) * 2);
		justify-content: center;
	}

	small {
		font-size: .6em;
	}

  @media not (display-mode: browser) {
		main {
			overflow-y: scroll;
			scroll-behavior: smooth;
			scroll-snap-type: y mandatory;
			height: 100dvh;
		}

		.lockup {
			display: none;
		}
	}
</style>

<main>
  <Section flip split>
    <div>
		<Logo/>
		<div class="lockup">
			<small>(Fr. pronunciation: [miz ɑ̃n‿mɔd])</small>
			<span>“placement in mode”</span>
		</div>
	</div>
  </Section>
  <slot/>
</main>