---
const { src, alt, split } = Astro.props;
---
<style>
  figure {
    display: inline-block;
    margin-inline: auto;
  }

  figure[data-split] {
    padding: calc(var(--unit) * 2);
    float: left;
    max-width: calc(var(--unit) * 16);
    margin-inline-start: calc(var(--unit) * -10);
  }

  :where(img, video) {
    max-width: 100%;
    max-height: calc(var(--unit) * 10);
    border: 12px solid #c58621;
    border-radius: 24px;
    display: block;
  }

  figcaption {
    font-size: .6em;
    line-height: 1;
    border-radius: 12px;
    background: #ffb53b;
    color: #3c2b0f;
    padding: 0.5em;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    float: right;
    margin-inline-end: 24px;
    font-weight: 500;
  }

  @media not (display-mode: browser) {
    figure[data-split] {
      float: initial;
      padding-block: 0;
    }
  }
</style>

{ src ? <figure data-split={ Boolean(split) }>
  { src.endsWith('mp4')
    ? <video src={ src } title={ alt } loop autoplay muted />
    : <img src={ src } alt={ alt } /> }
    <figcaption>{ alt }</figcaption>
</figure> : null }