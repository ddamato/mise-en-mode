---
const { src, alt, float } = Astro.props;
---
<style>
  figure {
    margin: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  figure[data-float] {
    padding: calc(var(--unit) * 2);
    float: left;
    max-width: calc(var(--unit) * 16);
    margin-inline-start: calc(var(--unit) * -10);
  }

  figure div {
    background-image: url('/colored-geometric.jpg');
		background-size: calc(var(--unit) * 12);
		background-position: top center;
		background-attachment: fixed;
		background-color: #c58621;
    overflow: hidden;
    height: 100%;
    max-height: 80vh;
  }

  :where(img, video) {
    display: block;
    max-width: 100%;
    height: 100%;
    width: 100%;
    backdrop-filter: contrast(0.5) blur(5px);
  }

  figcaption {
    font-size: 1.2rem;
    line-height: 1.5;
    padding: 0.75em;
    font-weight: 500;
    background: white;
    width: 100%;
    text-align: center;
  }

  @media  (display-mode: browser) and (max-width: 144vh) {
		figure[data-float] {
      float: initial;
      margin: 0;
      max-width: none;
      padding-inline: 0;
    }
	}

  @media not (display-mode: browser) {
    figure[data-float] {
      float: initial;
      padding-block: 0;
    }

    figure div {
      max-height: calc(var(--unit) * 10);
    }
  }
</style>

{ src ? <figure data-float={ Boolean(float) }>
    <div>
      { src.endsWith('mp4')
      ? <video src={ src } title={ alt } loop autoplay muted />
      : <img src={ src } alt={ alt } /> }  
    </div>
    <figcaption>{ alt }</figcaption>
</figure> : null }