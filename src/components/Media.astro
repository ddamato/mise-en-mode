---
import Figure from '@components/Figure.astro';
const { src, alt, float } = Astro.props;
---
<style>

  :where(img, video) {
    display: block;
    max-width: 100%;
    max-height: 80vh;
    backdrop-filter: contrast(0.5) blur(5px);
    background-color: var(--bg-color);
    border-radius: 4px;
  }

  @media not (display-mode: browser) {
    :where(img, video) {
      max-height: calc(var(--unit) * 10);
    }
  }
</style>

{ src && (
  <Figure float={ float }>
    { src.endsWith('mp4')
      ? <video slot="media" src={ src } title={ alt } autoplay muted loop playsinline />
      : <img slot="media" src={ src } alt={ alt } loading="lazy" /> }
    <slot/>
  </Figure>
) }